{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smartworkar.github.io/swar-schemas/schemas/v1.2.1/process.schema.json",
  "type": "object",
  "title": "SWAR Process Definition",
  "description": "SWAR Version 1.2 process definition",
  "required": [
    "name",
    "activities"
  ],
  "additionalProperties": false,
  "properties": {

    "name": {
      "type": "string",
      "description": "The name of the process (a short description)"
    },
    "description": {
      "type": "string",
      "description": "A detailed description of the process"
    },
    "title": {
      "type": "string",
      "description": "A one line description of the process (subject)"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "options": {
      "type": "object",
      "description": "Additional ad hoc properties",
      "additionalProperties": true
    },
    "activities": {
      "description": "The activities of the process",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "instructions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "attachments": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "photos": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "label": {
                        "type": "string"
                      }
                    },
                    "required": ["id", "label"]
                  }
                },
                "photos-faked": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "label": {
                        "type": "string"
                      }
                    },
                    "required": ["id", "label"]
                  }
                },
                "implementation": {
                  "type": "string"
                }
              },
              "oneOf": [
                { "required": ["photos"] },
                { "required": ["photos-faked"] }
              ],
              "not": {
                "required": ["a", "b"]
              },
              "required": [
                "id",
                "description"
              ]
            }
          }
        },
        "required": [
          "id",
          "description",
          "instructions"
        ]
      }
    }
  }
}
