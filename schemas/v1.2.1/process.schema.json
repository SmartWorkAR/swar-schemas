{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://smartworkar.github.io/swar-schemas/schemas/v1.2.1/process.schema.json",
  "type": "object",
  "title": "SWAR Process Definition",
  "description": "SWAR Version 1.2 process definition",
  "required": [
    "name",
    "activities"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the process (a short description)"
    },
    "description": {
      "type": "string",
      "description": "A detailed description of the process"
    },
    "title": {
      "type": "string",
      "description": "A one line description of the process (subject)"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "options": {
      "type": "object",
      "description": "Additional ad hoc properties",
      "additionalProperties": true
    },
    "activities": {
      "description": "The activities of the process",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "instructions"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "instructions": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "image": {
                  "type": "string"
                },
                "attachments": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "key": {
                  "type": "string"
                },
                "goal": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "values": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "subject": {"type": "array", "items": {"type": "string"}},
                "implementation": {
                  "oneOf": [
                    {
                      "type": "object",
                      "required": [
                        "type",
                        "fields"
                      ],
                      "properties": {
                        "type": {
                          "const": "form"
                        },
                        "title": {
                          "type": "string"
                        },
                        "fields": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": [
                              "id",
                              "type"
                            ],
                            "additionalProperties": false,
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "type": {
                                "type": "string"
                              },
                              "required": {
                                "type": "boolean"
                              },
                              "check": {
                                "type": "string"
                              },
                              "placeholder": {
                                "type": "string"
                              },
                              "width": {
                                "type": "string"
                              },
                              "origin": {
                                "type": "string"
                              },
                              "default": {
                                "type": "string"
                              }
                            }
                          }
                        },
                        "key": {
                          "type": "string"
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": [
                        "type",
                        "questions"
                      ],
                      "properties": {
                        "type": {
                          "const": "multipleChoice"
                        },
                        "message": {
                          "type": "string"
                        },
                        "questions": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": [
                              "id",
                              "answers"
                            ],
                            "properties": {
                              "id": {
                                "type": "string"
                              },
                              "text": {
                                "type": "string"
                              },
                              "answers": {
                                "type": "array",
                                "items": {
                                  "type": "string"
                                }
                              },
                              "default": {
                                "type": "string"
                              },
                              "height": {
                                "type": "integer"
                              }
                            }
                          }
                        }
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "photos"
                        },
                        "photos": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    {
                      "type": "object",
                      "required": ["quality"],
                      "properties": {
                        "type": {
                          "const": "video"
                        },
                        "description" : { "type": "string"},
                        "quality": {"type": "integer"}
                      }
                    },
                    {
                      "type": "object",
                      "properties": {
                        "type": {
                          "const": "doubleInput"
                        },
                        "description" : { "type": "string"},
                        "labels": {"type": "array", "items": {"type": "string"}},
                        "referenceValue": {"type": "string"},
                        "tolerance": {"type": "number"}
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
